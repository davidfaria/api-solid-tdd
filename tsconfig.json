{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["./*"],
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@entities/*": ["entities/*"],
      "@errors/*": ["errors/*"],
      "@middlewares/*": ["middlewares/*"],
      "@providers/*": ["providers/*"],
      "@storage/*": ["storage/*"],
      "@utils/*": ["utils/*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
